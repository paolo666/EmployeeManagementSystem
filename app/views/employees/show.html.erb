<h2>Add equipment:</h2>
<%= form_for([@emp, @emp.borrowed_equipments.build]) do |borrowed_eq| %>
<%= borrowed_eq.label :"Select Equipment:" %><br />

  <p>
    <%= borrowed_eq.label :"Date Borrowed:" %><br />
    <%= borrowed_eq.date_select(:dateBorrowed) %>
  </p>
  <p>
    <%= borrowed_eq.submit %>
  </p>
<% end %>

